
set-cursor(){
	cursor=$1
	if [[ $cursor == insert ]]; then
		echo -ne '\e[5 q'
	else
		echo -ne '\e[1 q'
	fi
}

zle-keymap-select() {
	if [ $KEYMAP = vicmd ]; then
		set-cursor normal
	else
		set-cursor insert
	fi
	if typeset -f prompt_pure_update_vim_prompt_widget > /dev/null; then
		prompt_pure_update_vim_prompt_widget
	fi
}

zle-line-init() {
	if [[ $cursor == normal ]]; then
		zle -K vicmd;
	fi
}

exit_zsh() {
	exit
}

set-cursor insert

bindkey -v

# insert mode
bindkey '^?' backward-delete-char
bindkey '^f' autosuggest-accept
bindkey '^p' fzf-file-widget
bindkey '^r' fzf-history-widget
bindkey '^u' kill-whole-line
bindkey 'jj' vi-cmd-mode

# normal mode
bindkey -a 'ZZ' exit_zsh
bindkey -a '^r' fzf-history-widget
bindkey -a 'qh' fzf-history-widget
bindkey -a 'qp' fzf-file-widget


zle -N exit_zsh
zle -N zle-keymap-select
zle -N zle-line-init
