{
	"coc.preferences.formatOnSaveFiletypes": [
		"svelte",
		"json",
		"elm",
		"typescript",
		"javascript",
		"haskell",
		"purescript",
		"html"
	],
	"diagnostic.errorSign": "✖",
	"diagnostic.hintSign": "ẍ",
	"diagnostic.infoSign": "⚐",
	"diagnostic.warningSign": "⚠",
	"eslint.autoFixOnSave": true,
	"eslint.probe": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html",
		"vue",
		"svelte",
		"markdown"
	],
	"explorer.buffer.showHiddenBuffers": true,
	"explorer.file.showHiddenFiles": true,
	"explorer.file.reveal.whenOpen": true,
	"explorer.icon.enableNerdfont": true,
	"explorer.previewAction.onHover": false,
	"explorer.keyMappings.global": {
		"y": "copyFile",
		"Y": "copyFile",
		"x": "delete",
		"d": "cutFile",
		"zh": "toggleHidden"
	},
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"javascript.suggestionActions.enabled": false,
	"prettier.onlyUseLocalVersion": false,
	"prettier.printWidth": 100,
	"prettier.tabWidth": 3,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"snippets.priority": 100,
	"suggest.noselect": false,
	"svelte.plugin.typescript.enable": true,
	"languageserver": {
		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": ["--lsp"],
			"rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
			"filetypes": ["haskell", "lhaskell"],
			"initializationOptions": {
				"languageServerHaskell": {
					"hlintOn": true,
					"maxNumberOfProblems": 10,
					"completionSnippetsOn": true
				}
			}
		},
		"elmLS": {
			"command": "elm-language-server",
			"filetypes": ["elm"],
			"rootPatterns": ["elm.json"],
			"initializationOptions": {
				"elmPath": "elm",
				"elmFormatPath": "elm-format",
				"elmTestPath": "elm-test",
				"elmAnalyseTrigger": "change",
				"disableElmLSDiagnostics": false,
				"skipInstallPackageConfirmation": false
			}
		},
		"purescript": {
			"command": "purescript-language-server",
			"args": ["--stdio"],
			"filetypes": ["purescript"],
			"trace.server": "off",
			"rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
			"settings": {
				"purescript": {
					"addSpagoSources": true,
					"addNpmPath": true // Set to true if using a local purty install for formatting
					// etc
				}
			}
		}
	},
	"git.enableGutters": true
}
